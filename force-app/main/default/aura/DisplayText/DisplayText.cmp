<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" 
                access="global" >
    
    <aura:attribute name="textVal" type="string" default="Salesforce Training Program"/>
    <aura:attribute name="textBgCol" type="string" default="red"/>
    
    <div class="divSec" style="{!'background-color:'+ v.textBgCol}">
        {! v.textVal} <br/>
    </div> 
 
    <lightning:button label="change Text" variant="brand" onclick="{! c.changeText}"/>
</aura:component>